{*layout '../@layout.latte'*}

{var $title = "Grievance"}
{var $description = "Admin Simple CMS Grievance"}
{var $keywords = "Admin, SimpleCMS, Grievance"}
{var $robots = "NOINDEX,NOFOLLOW"}

{block content}
<div class="container">
    <h2 class="text-center">Not resolved grievance</h2>

    <a n:href=":Admin:CMS:Grievance:resolved" class="btn btn-secondary">Open resolved</a>

    <div class="table-responsive mt-4">
        <table class="table table-striped caption-top">
            <thead>
                <th>Id</th>
                <th>Offer</th>
                <th>Comment</th>
                <th>Who wrote grievance</th>
                <th>Message</th>
                <th>Created_at</th>
                <th>Mark as</th>
            </thead>
            <tbody n:inner-foreach="$grievance_not_resolve as $gr">
                <tr>
                    <td>
                        {$gr->id}
                    </td>
                    <td>
                        <a n:href=":Admin:CMS:Offers:detail $gr->offer_id" class="btn btn-secondary">Offer</a>
                    </td>
                    <td>
                        <a n:if="!empty($gr->comment_id)" n:href=":Admin:CMS:Comments:edit $gr->comment_id"
                            class="btn btn-secondary">Comment</a>
                    </td>
                    <td>
                        <a n:href=":Admin:CMS:Clients:edit $gr->client_id_who" class="btn btn-secondary">Client</a>
                    </td>
                    <td>
                        {$gr->message}
                    </td>
                    <td>
                        {$gr->created_at}
                    </td>
                    <td>
                        <a n:href="markResolved! $gr->id" class="btn btn-secondary">Resolved</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>